<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/profileCardContainer"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTopLeftRadius"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter value for top left radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileCardContainer"
        app:layout_constraintVertical_bias="0.042"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextTopRightRadius"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter value for top right radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTopLeftRadius"
        app:layout_constraintVertical_bias="0.038"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextBottomLeftRadius"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter value for bottom left radius"
        app:layout_constraintTop_toBottomOf="@+id/editTextTopRightRadius"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextBottomRightRadius"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:hint="Enter value for bottom right radius"
        app:layout_constraintTop_toBottomOf="@+id/editTextBottomLeftRadius"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw Rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBottomRightRadius" />

</androidx.constraintlayout.widget.ConstraintLayout>